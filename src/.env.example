# ============================================
# FINANCE MANAGER APPLICATION CONFIGURATION
# ============================================
# Copy this file to .env and fill in the values
# Never commit .env to version control!

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV=development
APP_NAME=FinanceManager
APP_VERSION=1.0.0
PORT=3000
HOST=localhost
BASE_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# ============================================
# DATABASE CONFIGURATION
# ============================================
MONGODB_URI=mongodb://localhost:27017/finance-manager-dev
# For MongoDB Atlas (Production):
# MONGODB_ATLAS_URI=mongodb+srv://username:password@cluster.mongodb.net/finance-manager-prod?retryWrites=true&w=majority

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-64-characters
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-different-super-secure-refresh-secret-key-here-minimum-128-characters
JWT_REFRESH_EXPIRATION=7d

# ============================================
# SECURITY
# ============================================
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=your-session-secret-key-change-this
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100           # Max requests per window

# ============================================
# EMAIL SERVICE (For password reset, etc.)
# ============================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_NAME=Finance Manager
SMTP_FROM_EMAIL=noreply@financemanager.com

# Email URLs
PASSWORD_RESET_URL=http://localhost:5173/reset-password
EMAIL_VERIFICATION_URL=http://localhost:5173/verify-email

# ============================================
# FILE UPLOADS
# ============================================
MAX_FILE_SIZE=5242880        # 5MB in bytes
MAX_FILES=5                  # Max files per upload
UPLOAD_DIR=./uploads
PROFILE_PICTURE_DIR=./uploads/profile-pictures

# AWS S3 (Optional - for production)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET_NAME=your-bucket-name
# AWS_S3_BASE_URL=https://your-bucket.s3.amazonaws.com

# ============================================
# FINANCE APP SPECIFIC
# ============================================
DEFAULT_CURRENCY=USD
DEFAULT_MONTHLY_BUDGET=0
BILL_REMINDER_DAYS=3
INVESTMENT_CATEGORIES=Stocks,Bonds,RealEstate,Crypto,Savings,Retirement

# ============================================
# THIRD-PARTY APIs
# ============================================
# Exchange Rate API (Get from: https://exchangerate-api.com)
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key-here
EXCHANGE_RATE_BASE_URL=https://api.exchangeratesapi.io/v1

# Stock Market API (Optional)
# STOCK_API_KEY=your-stock-api-key-here

# Payment Gateway (Optional - for premium features)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=debug              # debug, info, warn, error
LOG_FILE_PATH=./logs
ENABLE_CONSOLE_LOG=true
ENABLE_FILE_LOG=true

# Application Insights (Azure)
# APP_INSIGHTS_CONNECTION_STRING=InstrumentationKey=00000000-0000-0000-0000-000000000000

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SWAGGER=true          # API documentation at /api
ENABLE_COMPRESSION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_CACHE=false

# ============================================
# TESTING
# ============================================
MONGODB_URI_TEST=mongodb://localhost:27017/finance-manager-test
TEST_TIMEOUT=30000
E2E_TEST_USER_EMAIL=test@example.com
E2E_TEST_USER_PASSWORD=TestPassword123!

# ============================================
# CACHE (Redis - Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=300                # 5 minutes in seconds
CACHE_ENABLED=false

# ============================================
# PERFORMANCE
# ============================================
HTTP_KEEP_ALIVE_TIMEOUT=5000
HTTP_HEADERS_TIMEOUT=10000
BODY_PARSER_LIMIT=1mb

# ============================================
# DEBUGGING
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
ENABLE_QUERY_LOG=false
SHOW_ERROR_DETAILS=true      # Set to false in production

# ============================================
# NOTIFICATIONS
# ============================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_BILL_REMINDERS=true
NOTIFICATION_CHECK_INTERVAL=3600000  # 1 hour in milliseconds

# ============================================
# REPORTS & EXPORTS
# ============================================
REPORT_EXPORT_DIR=./exports
ALLOWED_EXPORT_FORMATS=pdf,csv,json
MAX_REPORT_RETENTION_DAYS=30

# ============================================
# BRANDING & UI
# ============================================
APP_PRIMARY_COLOR=#3B82F6
APP_SECONDARY_COLOR=#10B981
APP_LOGO_URL=/logo.png
APP_FAVICON_URL=/favicon.ico